import { StatusBar } from 'expo-status-bar';
import { useState } from 'react';
import { StyleSheet, Text, View, TextInput, Button } from 'react-native';

export default function App() {
  const [calcData, setCalcData] = useState({ num: "", result: null });

  const doCalc = () => {
    if (isNaN(calcData.num) || calcData.num === "") {
      setCalcData({ ...calcData, result: "Invalid input" });
      return;
    }

    const num = Number(calcData.num);
    const sqr = num * num;

    setCalcData({ ...calcData, result: `Result: ${sqr}` });
  };

  return (
    <View style={styles.container}>
      <Text style={styles.title}>Square Calc App</Text>

      <TextInput
        value={String(calcData.num)}
        keyboardType="numeric"
        placeholder="Enter number"
        style={styles.input}
        onChangeText={(data) => setCalcData({ ...calcData, num: data })}
      />

      <Button title="Find Square" onPress={doCalc} />

      {calcData.result && <Text style={styles.result}>{calcData.result}</Text>}

      <StatusBar style="auto" />
    </View>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: "#a15252",
    alignItems: "center",
    justifyContent: "center",
    padding: 20,
  },
  title: {
    fontSize: 24,
    fontWeight: "bold",
    marginBottom: 20,
    color: "white",
  },
  input: {
    borderWidth: 1,
    borderColor: "white",
    padding: 10,
    width: 200,
    marginBottom: 20,
    color: "white",
  },
  result: {
    marginTop: 20,
    fontSize: 20,
    color: "white",
  },
});
